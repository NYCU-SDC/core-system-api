@slug = {{ORG_SLUG}}
@unitId = {{UNIT_ID}}
@parentId = {{PARENT_ID}}
@childId = {{CHILD_ID}}
@memberId = {{MEMBER_ID}}

###

# @title List Organization Sub-units
# @description List all units under an organization, optionally filtered by parent unit ID.
GET {{BASE_URL}}/orgs/{{slug}}/units

###

# @title List Organization Sub-units (With Parent Filter)
# @description List all units under an organization filtered by parent unit ID.
GET {{BASE_URL}}/orgs/{{slug}}/units?parentId={{parentId}}

###

# @title List Unit Sub-units
# @description List all sub-units of a specific unit.
GET {{BASE_URL}}/orgs/{{slug}}/units/{{unitId}}/subunits

###

# @title List Unit Sub-units (With Parent Filter)
# @description List all sub-units of a specific unit filtered by parent unit ID.
GET {{BASE_URL}}/orgs/{{slug}}/units/{{unitId}}/subunits?parentId={{parentId}}

###

# @title List Organization Sub-unit IDs
# @description List all unit IDs under an organization.
GET {{BASE_URL}}/orgs/{{slug}}/unit-ids

###

# @title List Organization Sub-unit IDs (With Parent Filter)
# @description List all unit IDs under an organization filtered by parent unit ID.
GET {{BASE_URL}}/orgs/{{slug}}/unit-ids?parentId={{parentId}}

###

# @title List Unit Sub-unit IDs
# @description List all sub-unit IDs of a specific unit.
GET {{BASE_URL}}/orgs/{{slug}}/units/{{unitId}}/subunit-ids

###

# @title List Unit Sub-unit IDs (With Parent Filter)
# @description List all sub-unit IDs of a specific unit filtered by parent unit ID.
GET {{BASE_URL}}/orgs/{{slug}}/units/{{unitId}}/subunit-ids?parentId={{parentId}}

###

# @title Get All Organizations
# @description Get all organizations in the system.
GET {{BASE_URL}}/orgs

###

# @title List Organizations of Current User
# @description List all organizations that the current user is a member of.
GET {{BASE_URL}}/orgs/me

###

# @title Get Organization
# @description Get a specific organization by its slug.
GET {{BASE_URL}}/orgs/{{slug}}

###

# @title Get Unit
# @description Get a specific unit by its unique identifier within an organization.
GET {{BASE_URL}}/orgs/{{slug}}/units/{{unitId}}

###

# @title Create Organization
# @description Create a new organization with name, description, slug, and metadata.
POST {{BASE_URL}}/orgs
Content-Type: application/json

{
  "name": "NYCU SDC",
  "description": "陽明交大軟體開發社",
  "slug": "nycu-sdc",
  "metadata": {
    "type": "club"
  }
}

###

# @title Create Unit
# @description Create a new unit under an organization.
POST {{BASE_URL}}/orgs/{{slug}}/units
Content-Type: application/json

{
  "name": "2025 Backend",
  "description": "Backend course",
  "metadata": {
    "year": "2025",
    "type": "education program"
  }
}

###

# @title Update Organization
# @description Update an existing organization by its slug.
PUT {{BASE_URL}}/orgs/{{slug}}
Content-Type: application/json

{
  "name": "NYCU SDC Updated",
  "description": "陽明交大軟體開發社 - Updated",
  "slug": "nycu-sdc",
  "metadata": {
    "type": "club",
    "updated": true
  }
}

###

# @title Update Unit
# @description Update an existing unit by its unique identifier.
PUT {{BASE_URL}}/orgs/{{slug}}/units/{{unitId}}
Content-Type: application/json

{
  "name": "2025 Backend - Updated",
  "description": "Backend course - Updated",
  "metadata": {
    "year": "2025",
    "type": "education program",
    "updated": true
  }
}

###

# @title Delete Organization
# @description Delete a specific organization by its slug.
DELETE {{BASE_URL}}/orgs/{{slug}}

###

# @title Delete Unit
# @description Delete a specific unit by its unique identifier.
DELETE {{BASE_URL}}/orgs/{{slug}}/units/{{unitId}}

###

# @title Add Parent-Child Relationship
# @description Create a parent-child relationship between units. If parentId is not provided, the child becomes a root unit.
POST {{BASE_URL}}/orgs/relations
Content-Type: application/json

{
  "parentId": "3c5fa073-7b97-43a3-bc44-ddc98f390a08",
  "childId": "d26e9c90-4747-496b-9953-7e7c4f97643f",
  "orgId": "3c5fa073-7b97-43a3-bc44-ddc98f390a08"
}

###

# @title Add Parent-Child Relationship (Root Unit)
# @description Create a root unit by not providing parentId.
POST {{BASE_URL}}/orgs/relations
Content-Type: application/json

{
  "childId": "d26e9c90-4747-496b-9953-7e7c4f97643f",
  "orgId": "3c5fa073-7b97-43a3-bc44-ddc98f390a08"
}

###

# @title Remove Parent-Child Relationship
# @description Remove a parent-child relationship by child unit ID.
DELETE {{BASE_URL}}/orgs/relations/child-id/{{childId}}

###

# @title Add Organization Member
# @description Add a member to an organization by their email address.
POST {{BASE_URL}}/orgs/{{slug}}/members
Content-Type: application/json

{
  "email": "user@example.com"
}

###

# @title List Organization Members
# @description List all members of an organization.
GET {{BASE_URL}}/orgs/{{slug}}/members

###

# @title Remove Organization Member
# @description Remove a member from an organization by their member ID.
DELETE {{BASE_URL}}/orgs/{{slug}}/members/{{memberId}}

###

# @title Create Organization Form
# @description Create a new form under an organization.
POST {{BASE_URL}}/orgs/{{slug}}/forms
Content-Type: application/json

{
  "title": "New Form",
  "description": "Form description"
}

###

# @title List Forms by Organization
# @description List all forms under a specific organization.
GET {{BASE_URL}}/orgs/{{slug}}/forms

###

# @title List Forms of Current User
# @description List all forms assigned to the current authenticated user with their completion status.
GET {{BASE_URL}}/forms/me
