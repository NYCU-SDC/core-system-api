{
	"compilerOptions": {
		/* 語言 / Runtime */
		"target": "ES2019",
		"lib": ["ES2019", "DOM"],
		"useDefineForClassFields": true,

		/* Module */
		"module": "ESNext",
		"moduleResolution": "Bundler",

		/* 輸出 */
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"sourceMap": true,

		/* 型別嚴謹度 */
		"strict": true,
		"exactOptionalPropertyTypes": true,
		"noUncheckedIndexedAccess": true,

		/* DX / 穩定性 */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"]
}
