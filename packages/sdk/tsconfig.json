{
	"compilerOptions": {
		"target": "ES2019",
		"lib": ["ES2019", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Bundler",

		"rootDir": "src",
		"outDir": "dist",

		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,

		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
